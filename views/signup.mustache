 	<body>
    <div id="topbarwrapper">
      <form action="/statisticsredirect" method="post"><button type="submit">Statistics</button></form>
      <form action="/loginredirect" method="post"><button type="submit">Login</button></form>
      <form action="/signupredirect" method="post"><button type="submit">Sign Up</button></form>
    </div>
    <div class="body" id="signupbody">
      <h1>Sign Up!</h1>
      <p>Items marked with * are required</p>
      <form action="/signup" method="post">
        <p>Username*:</p>
        <input type="text" name="username"required>
        <p>Password*:</p>
        <input type="password" name="password1"required>
        <p>Retype Password*:</p>
        <input type="password" name="password2"required>
        <p>Valid Email:</p>
        <input type="email" name="email">
        <br><br>
        <button type="submit">Sign Up</button>
        <p class="error">{{status}}</p>
      </form>
    </div>
 	  <script type="text/javascript" src="main.js"></script>
 	</body>
 </html>
